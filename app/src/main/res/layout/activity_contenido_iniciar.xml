<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itla.mudat.ContenidoIniciar">

    <FrameLayout
        android:id="@+id/idfragmentactiviprincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/black_overlayback"

            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/idsplasjiniciarsesioncon"
                style="?metaButtonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Iniciarsesion" />

            <Button
                android:id="@+id/idsplasjcrearusuariocon"
                style="?metaButtonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="@string/crearcuentadeusuario" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
