<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#ec8e8e" />
        <stroke
            android:width="1dp"
            android:color="#d93535" />
        <corners
            android:radius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:bottomRightRadius="15dp"
        />
        <padding
            android:bottom="2dp"
            android:left="3dp"
            android:right="3dp"
            android:top="2dp"
            />
    </shape>
</item>
<item>
    <shape>
        <gradient
            android:startColor="#ec8e8e"
            android:endColor="#d93535"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#d93535" />
        <corners
            android:radius="5dp"
            android:topLeftRadius="5dp"
            android:topRightRadius="5dp"
            android:bottomLeftRadius="5dp"
            android:bottomRightRadius="5dp"
        />
        <padding
            android:bottom="2dp"
            android:left="3dp"
            android:right="3dp"
            android:top="2dp"
            />
    </shape>
</item>
</selector>